
   
.container
  .row
    %h2.ollert-header
      .text-center.col-xs-12
        Proyectos de #{@mun.name}

  .row
    
  - @boards.each do |board|
    .col-md-3.col-sm-3.col-xs-4.no-padding
      .analysis-block-md
        #{board.name}
        - @org=Trello::Board.find(board.board_id).organization
        %ul{class: 'boards-list'}
          %a{style: 'display: inline-block;float: right;padding: 5px !important;', href: "/new_board?mun_id=#{@mun.id}&org_id=#{@org.id}&last_board_id=#{board.board_id}&orgName=#{@org.name}&board_name=#{board.name}&edit=true"}
            %span.glyphicon.glyphicon-pencil
          %li.boards-list-item
            %btn.btn-link.boards-list-item-link
              Trello ID: #{board.board_id}
          %li.boards-list-item
            %btn.btn-link.boards-list-item-link
              Nombre: #{board.name}
          %li.boards-list-item
            %btn.btn-link.boards-list-item-link
              Monto: #{board.monto}
          - if(board.tipo!=nil)
            %li.boards-list-item
              %btn.btn-link.boards-list-item-link
                Tipo: #{board.tipo.name}
          - if(board.fondo!=nil)
            %li.boards-list-item
              %btn.btn-link.boards-list-item-link
                Fondo: #{board.fondo.name}
          - if(board.zones!=nil)
            %li.boards-list-item
              %btn.btn-link.boards-list-item-link
                - zoness=" | "
                - board.zones.each do |zone|
                  - zoness=zoness+zone.name+" | "
                Zonas: #{zoness}
            
  - @org=@mun.organizations.find_by(name: "3. No Priorizados")
  %a{style: 'display: inline-block;float: right;padding: 5px !important;', href: "/new_board?mun_id=#{@mun.id}&org_id=#{@org.org_id}&last_board_id=#{@org.org_id}&orgName=#{@org.name}&edit=false&admin=true"}
    %span.glyphicon.glyphicon-plus
